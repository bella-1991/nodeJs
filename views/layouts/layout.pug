doctype html 
html 
    head 
        meta(name='viewport' content='width=device-width, initial-scale=1')
        title NodeJs Tutorial
        link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet' href='/css/styles.css')
    body 
        nav.navbar.navbar-expand-md.navbar-dark.bg-dark
            .container
                a.navbar-brand(href='#') NodeJs
                button.navbar-toggler.collapsed(type='button' data-bs-toggle='collapse' data-bs-target='#navbarsExampleDefault' aria-controls='navbarsExampleDefault' aria-expanded='false' aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                #navbarsExampleDefault.navbar-collapse.collapse
                    ul.navbar-nav.me-auto.mb-2.mb-md-0
                        li.nav-item
                            a.nav-link(href='/') Home
                        if user 
                            li.nav-item
                                a.nav-link(href='/articles/add') Add Article   
                    ul.navbar-nav.me-auto.mb-2.mb-md-0.navbar-right
                        if user 
                            li.nav-item 
                                a.nav-link(href='/user/logout') Logout
                        else 
                            li.nav-item
                                a.nav-link(href='/user/register') Register
                            li.nav-item
                                a.nav-link(href='/user/login') Login    


        .container
            != messages('message', locals)
            if errors 
                each error, i in errors 
                    div(class='alert alert-danger')= error.msg
            block content 
            br 
            hr
            footer 
                p Copyright &copy Shalini Fernando 2021
        script(src='/bower_components/jquery/dist/jquery.min.js')
        script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
        script(src='/js/scripts.js')