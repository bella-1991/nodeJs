extends ./layouts/layout

block content
    h1= article.title
    h Written by #{author}
    p= article.body
    if user && user.id == article.author
        hr
        a.btn.btn-primary(href=`/articles/edit/${article.id}`) Edit
        a.btn.btn-danger.js-delete-article(href='#', data-id=article._id) Delete